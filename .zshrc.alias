alias ls='ls -F'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lltr='ls -ltr'
alias llatr='ls -latr'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias mkdir='mkdir -p'
alias diff='colordiff -u'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g N='> /dev/null'

alias zmv='noglob zmv -W'

alias history='history -iD'

alias ds='ls -F | grep / | xargs du -sh'
